@model JazzMusicians.Models.Musician

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<hr />

<img src="@Url.Content(Model.Thumbnail)" height="100" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Instruments, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Instruments, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Instruments, "", new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Years Active</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Years, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                @Html.ValidationMessageFor(model => model.Years, "", new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Biography</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control col-md-6", rows = 10 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Image URL</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Thumbnail, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = "https://en/wikipedia.org/.../img.png" } })
                @Html.ValidationMessageFor(model => model.Thumbnail, null, new { @class = "text-danger col-md-6" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<div class="form-group">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
